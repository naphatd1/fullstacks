# Production Environment Variables Example
# Copy this file to .env.production and update the values

NODE_ENV=production
PORT=4000

# Database Configuration
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:5432/YOUR_DB_NAME?schema=public
POSTGRES_DB=YOUR_DB_NAME
POSTGRES_USER=YOUR_DB_USER
POSTGRES_PASSWORD=YOUR_DB_PASSWORD

# JWT Configuration - Generate your own secrets!
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_REFRESH_TOKEN_SECRET=YOUR_JWT_REFRESH_SECRET_HERE

# Supabase Configuration (Optional - for file storage)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_KEY

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# CORS Origins (comma separated)
CORS_ORIGINS=http://YOUR_SERVER_IP,https://YOUR_SERVER_IP